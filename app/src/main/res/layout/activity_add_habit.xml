<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_habit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBg"
    tools:context="com.sqchen.vhabit.activity.AddHabitActivity">

    <include
        android:id="@+id/add_habit_top_actionbar"
        layout="@layout/include_top_actionbar"
        />

    <LinearLayout
        android:id="@+id/lin_add_habit_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/add_habit_top_actionbar"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        >
        <TextView
            android:text="习惯名称"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/textBlack"
            />
        <EditText
            android:id="@+id/edit_add_habit_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入要创建的习惯名称"
            android:textSize="15sp"
            android:gravity="center"
            />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/lin_set_notice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_below="@id/lin_add_habit_name"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:text="设置提醒"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/txt_set_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未设置"
            android:textColor="@color/text_no_letter_first"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/notice__go_to_right"
            />
        <ImageView
            android:id="@+id/notice__go_to_right"
            android:src="@drawable/ic_go_to_right"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lin_set_private"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_below="@id/lin_set_notice"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:text="设置私密"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/txt_set_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对所有人公开"
            android:textColor="@color/text_no_letter_first"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/private_go_to_right"
            />
        <ImageView
            android:id="@+id/private_go_to_right"
            android:src="@drawable/ic_go_to_right"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

</RelativeLayout>
