<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/greyBg"
              tools:context="com.sqchen.vhabit.fragment.message.MessageFrag">
    <RelativeLayout
        android:id="@+id/frag_title_message"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/green"
        >
        <LinearLayout
            android:id="@+id/title_message_center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            >
            <Button
                android:id="@+id/message_title_letter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/green"
                android:text="私信"
                android:textSize="17sp"
                android:textColor="@color/text_no_focus"
                />
            <Button
                android:id="@+id/message_title_notice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/green"
                android:text="通知"
                android:textSize="17sp"
                android:textColor="@color/text_no_focus"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/message_title_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_banner_chat"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/msg_cursor"
        android:layout_width="match_parent"
        android:background="@color/green"
        android:orientation="horizontal"
        android:layout_height="3dp">
        <ImageView
            android:id="@+id/msg_top_bottom"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/lines_bg"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/message_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        >
    </android.support.v4.view.ViewPager>


</LinearLayout>
