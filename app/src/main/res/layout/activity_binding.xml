<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/setting_item_bg"
    tools:context="com.sqchen.vhabit.activity.CollectionActivity">

    <include layout="@layout/include_top_actionbar" />

    <RelativeLayout
        android:id="@+id/rel_bind_tel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/txt_bind_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack"
            android:text="手机号"
            />

        <TextView
            android:id="@+id/bind_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未绑定"
            android:textColor="@color/green"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        >

        <RelativeLayout
            android:id="@+id/rel_bind_weChat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/txt_bind_weChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textBlack"
                android:text="微信"
                />

            <TextView
                android:id="@+id/bind_weChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未绑定"
                android:textColor="@color/green"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/lines_bg"
            android:layout_height="0.1dp"/>

        <RelativeLayout
            android:id="@+id/rel_bind_weibo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/txt_bind_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textBlack"
                android:text="微博"
                />

            <TextView
                android:id="@+id/bind_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未绑定"
                android:textColor="@color/green"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/lines_bg"
            android:layout_height="0.1dp"/>

        <RelativeLayout
            android:id="@+id/rel_bind_qq"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/txt_bind_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textBlack"
                android:text="QQ"
                />

            <TextView
                android:id="@+id/bind_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已绑定"
                android:textColor="@color/text_grey_light"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你可以使用任意已绑定的账号来登录"
        android:textColor="@color/text_grey_light"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

</LinearLayout>
