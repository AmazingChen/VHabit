<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dynamic_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/greyBg"
    tools:context="com.sqchen.vhabit.activity.DynamicDetails">

    <include layout="@layout/include_top_actionbar" />

    <ScrollView
        android:id="@+id/dyn_details_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:id="@+id/dynamic_details_top"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dynamic_details_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/user_1"
                    android:layout_marginLeft="20dp"
                    />

                <RelativeLayout
                    android:id="@+id/dynamic_details_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:id="@+id/dynamic_details_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一川烟草满城风絮"
                        android:textColor="@color/textBlack"
                        android:textSize="15sp"
                        android:layout_alignParentLeft="true"
                        />
                    <TextView
                        android:id="@+id/dynamic_details_publish_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今天 12:53"
                        android:textSize="10sp"
                        android:textColor="@color/text_no_letter_first"
                        android:layout_alignParentRight="true"
                        />

                    <TextView
                        android:id="@+id/dynamic_details_habit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#每天手写一句喜欢的话#"
                        android:textSize="13sp"
                        android:textColor="@color/green"
                        android:layout_below="@id/dynamic_details_user_name"
                        android:layout_marginTop="5dp"
                        />
                    <TextView
                        android:id="@+id/dynamic_details_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11天"
                        android:textSize="13sp"
                        android:textColor="@color/green"
                        android:layout_below="@id/dynamic_details_publish_time"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/dynamic_details_img"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                />

            <TextView
                android:id="@+id/dynamic_details_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我想要你。"
                android:textColor="@color/hot_live_style_item"
                android:textSize="15sp"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                />
            <LinearLayout
                android:id="@+id/dynamic_details_lin_liked"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/dynamic_details_like_sign"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_mindfeed_liked"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dynamic_details_like_user_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/user_1"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dynamic_details_like_user_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/user_1"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dynamic_details_like_user_3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/user_1"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dynamic_details_like_user_4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/user_1"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dynamic_details_like_user_5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/user_1"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dynamic_details_like_user_6"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/user_1"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dynamic_details_like_user_7"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/user_1"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dynamic_details_like_user_more"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/more_like_avatar"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.00000001dp"
                android:background="@color/text_grey_light"
                />

            <LinearLayout
                android:id="@+id/dynamic_details_bottom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/dynamic_details_click_like"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_mindfeed_like"
                        />
                    <TextView
                        android:id="@+id/dynamic_details_liked_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/text_grey_light"
                        android:text="123"
                        android:layout_margin="5dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/dynamic_details_click_comment"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_mindfeed_comment"
                        />
                    <TextView
                        android:id="@+id/dynamic_details_comment_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/text_grey_light"
                        android:text="8"
                        android:layout_margin="5dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/dynamic_details_habit_type"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_mindfeed_tree"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <ImageView
                        android:id="@+id/dynamic_details_more"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_mindfeed_more"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
