<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.sqchen.vhabit.activity.CollectionActivity">

    <include layout="@layout/include_top_actionbar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/green"
        >
        <ImageView
            android:id="@+id/about_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_logo_tran"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:text="VHabit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:text="Version 3.9.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        >

        <RelativeLayout
            android:id="@+id/rel_check_version"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/txt_check_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textBlack"
                android:text="检查更新"
                />

            <TextView
                android:id="@+id/check_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前已是最新版本"
                android:textColor="@color/text_grey_light"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/lines_bg"
            android:layout_height="0.1dp"/>

        <RelativeLayout
            android:id="@+id/rel_clean_cache"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/txt_clean_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textBlack"
                android:text="清除缓存"
                />

            <TextView
                android:id="@+id/clean_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缓存大小44M"
                android:textColor="@color/text_grey_light"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/lines_bg"
            android:layout_height="0.1dp"/>

        <RelativeLayout
            android:id="@+id/rel_contact_us"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/txt_contact_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textBlack"
                android:text="联系我们"
                />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/go_to_right"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/lines_bg"
            android:layout_height="0.1dp"/>

        <RelativeLayout
            android:id="@+id/rel_use_agreement"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/txt_use_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textBlack"
                android:text="使用协议"
                />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/go_to_right"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/lines_bg"
            android:layout_height="0.1dp"/>

    </LinearLayout>


</LinearLayout>
